{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "$auth": ["src/auth"],
      "$config": ["src/config"],
      "$components": ["src/components"],
      "$components/*": ["src/components/*"],
      "$db": ["src/db"],
      "$db/*": ["src/db/*"],
      "$middlewares": ["src/middlewares"],
      "$middlewares/*": ["src/middlewares/*"],
      "$controllers": ["src/controllers"],
      "$controllers/*": ["src/controllers/*"],
      "$services": ["src/services"],
      "$services/*": ["src/services/*"],
      "$pages": ["src/pages"],
      "$pages/*": ["src/pages/*"],
      "$script": ["src/script"],
      "$script/*": ["src/script/*"],
      "$lib": ["src/lib"]
    }
  }
}