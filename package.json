{
  "name": "habit-tracker",
  "version": "1.0.50",
  "main": "src/index.tsx",
  "scripts": {
    "dev": "bun run --hot src/index.tsx",
    "tailwind:dev": "bunx tailwindcss -i ./src/styles/index.css -o ./public/styles/index.css --watch",
    "tailwind:prod": "bunx tailwindcss -i ./src/styles/index.css -o ./public/styles/index.css",
    "db:generate": "bunx drizzle-kit generate:sqlite",
    "db:studio": "bunx drizzle-kit studio",
    "db:migrate": "bun run src/db/migrate.ts",
    "mix": "bunx mix watch",
    "start:dev": "concurrently \"bun dev\" \"bun tailwind:dev\" \"bun mix\"",
    "start:prod": "bun run src/index.tsx && bun run tailwind:prod && bunx mix"
  },
  "dependencies": {
    "@alpinejs/collapse": "^3.13.10",
    "@alpinejs/focus": "^3.13.10",
    "@hono/zod-validator": "^0.2.0",
    "@iconify-json/ri": "^1.1.20",
    "@iconify/utils": "^2.1.23",
    "@libsql/client": "latest",
    "@lucia-auth/adapter-sqlite": "^3.0.1",
    "@t3-oss/env-core": "^0.9.2",
    "@tailwindcss/forms": "^0.5.7",
    "alpinejs": "^3.13.8",
    "alpinejs-manage": "^1.0.4",
    "arctic": "^1.2.1",
    "better-sqlite3": "^8.6.0",
    "bun-sqlite-migrations": "^1.0.2",
    "classnames": "^2.5.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.28.6",
    "drizzle-typebox": "^0.1.1",
    "hono": "^4.1.3",
    "laravel-mix": "^6.0.49",
    "lucia": "^3.1.1",
    "oslo": "^1.2.0",
    "tailwindcss": "^3.4.3",
    "tailwindcss-mosiui-mini": "^0.1.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/alpinejs": "^3.13.10",
    "@types/bun": "latest",
    "concurrently": "^8.2.2",
    "drizzle-kit": "^0.19.13",
    "typed-html": "^3.0.1",
    "typed-htmx": "^0.2.1"
  },
  "module": "src/index.tsx"
}
